<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahmme.landcalculator.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <CheckBox
            android:text="@string/save_calculation_history"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/checkBox"
            android:layout_weight="1.5"
            android:background="@color/green"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_common"
            android:padding="@dimen/padding_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:checked="true"
            />

        <Button
            android:id="@+id/save_units"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/save"
            android:layout_gravity="right"
            android:textSize="@dimen/text_size_big"
            android:background="@drawable/custom_button"
            android:textColor="@drawable/text_color"
            android:layout_marginBottom="@dimen/margin_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:padding="@dimen/padding_very_small"
            android:layout_marginBottom="@dimen/margin_very_small">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="@string/desim"
                android:padding="@dimen/padding_small"
                android:gravity="center"
                android:textSize="@dimen/text_size_common"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/desim_unit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:padding="@dimen/padding_small"
                android:textSize="@dimen/text_size_common"
                android:textColor="@color/black"
                android:background="@color/white"
                android:inputType="numberDecimal"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="@string/ft_sqare"
                android:padding="@dimen/padding_small"
                android:gravity="center"
                android:textSize="@dimen/text_size_common"
                android:textColor="@color/green"
                android:id="@+id/textView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:padding="@dimen/padding_very_small"
            android:layout_marginBottom="@dimen/margin_very_small">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="@string/gonda"
                android:padding="@dimen/padding_small"
                android:gravity="center"
                android:textSize="@dimen/text_size_common"
                android:textColor="@color/white"
                />
            <EditText
                android:id="@+id/gonda_unit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:padding="@dimen/padding_small"
                android:textSize="@dimen/text_size_common"
                android:textColor="@color/black"
                android:background="@color/white"
                android:inputType="numberDecimal"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="@string/ft_sqare"
                android:padding="@dimen/padding_small"
                android:gravity="center"
                android:textSize="@dimen/text_size_common"
                android:textColor="@color/green"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.5">



        </LinearLayout>

    </LinearLayout>


</FrameLayout>
