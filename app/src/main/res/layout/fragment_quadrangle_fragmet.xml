<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahmme.landcalculator.quadrangle.QuadrangleFragmet">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="#babcbc"
        android:orientation="vertical"
        tools:context="com.example.ahmme.landcalculator.Quadrangle_Calculation">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:text="QUADRANGLE AREA"
            android:padding="@dimen/small_padding"
            android:gravity="center"
            android:textSize="@dimen/text_size"
            android:textColor="@color/white"
            android:layout_marginBottom="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="1dp">

            <Button
                android:id="@+id/result_btn"
                android:onClick="Result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Result"
                android:layout_gravity="bottom"
                android:textSize="@dimen/text_size"
                android:background="@drawable/custom_button"
                android:textColor="@drawable/text_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:padding="2dp"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Length 1"
                android:padding="@dimen/small_padding"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/length_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:padding="@dimen/small_padding"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:background="@color/white"
                android:inputType="numberDecimal"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="Ft"
                android:padding="@dimen/small_padding"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:textColor="@color/green"
                android:id="@+id/textView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:paddingBottom="@dimen/small_padding"
            android:paddingLeft="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Length 2"
                android:padding="@dimen/small_padding"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"
                />
            <EditText
                android:id="@+id/length_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:padding="@dimen/small_padding"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:background="@color/white"
                android:inputType="numberDecimal"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="Ft"
                android:padding="@dimen/small_padding"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:textColor="@color/green"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:paddingBottom="@dimen/small_padding"
            android:paddingLeft="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Width 1"
                android:padding="@dimen/small_padding"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/width_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:padding="@dimen/small_padding"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:background="@color/white"
                android:inputType="numberDecimal"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="Ft"
                android:padding="@dimen/small_padding"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:textColor="@color/green"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:paddingBottom="@dimen/small_padding"
            android:paddingLeft="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Width 2"
                android:padding="@dimen/small_padding"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/width_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:padding="@dimen/small_padding"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:background="@color/white"
                android:inputType="numberDecimal"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="Ft"
                android:padding="@dimen/small_padding"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:textColor="@color/green"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:paddingBottom="@dimen/small_padding"
            android:paddingLeft="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Caption"
                android:padding="@dimen/small_padding"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/caption"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:hint="History Title"
                android:padding="@dimen/small_padding"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:background="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/result_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:padding="@dimen/small_padding"
            android:textSize="@dimen/text_size"
            android:textColor="#0926e2"
            android:background="#33cf99"
            android:layout_marginBottom="1dp"/>

    </LinearLayout>

</FrameLayout>
